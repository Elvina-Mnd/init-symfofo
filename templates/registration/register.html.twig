{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container">
    <h3 class="text-center">Rejoignez la #Nanga Def style</h3>
    <h4 class="text-center">et profitez ainsi des bons plans et des nouveautés !</h4>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom'
        }) }}
        {{ form_row(registrationForm.address, {
            label: 'Addresse'
        }) }}
        {{ form_row(registrationForm.city, {
            label: 'Ville'
        }) }}
        {{ form_row(registrationForm.zipcode, {
            label: 'Code postal'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'J\'accepte les conditions générales d\'utilisation de Nanga Def'
        }) }}
        <div class="text-center">
        <button type="submit" class="btn btn-primary">Valider mon inscription</button>
        </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
